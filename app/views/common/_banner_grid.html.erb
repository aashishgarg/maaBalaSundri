<div class="banner-grid">
  <div id="visual">
    <div class="slide-visual">
      <!-- Slide Image Area (1000 x 424) -->
      <ul class="slide-group">
        <li><%= image_tag 'ba1.jpg', class: 'img-responsive' %></li>
        <li><%= image_tag 'ba2.jpg', class: 'img-responsive' %></li>
        <li><%= image_tag 'ba3.jpg', class: 'img-responsive' %></li>
      </ul>

      <!-- Slide Description Image Area (316 x 328) -->
      <div class="script-wrap">
        <ul class="script-group">
          <li><div class="inner-script"><%= image_tag 'baa1.jpg', class: 'img-responsive' %></div></li>
          <li><div class="inner-script"><%= image_tag 'baa2.jpg', class: 'img-responsive' %></div></li>
          <li><div class="inner-script"><%= image_tag 'baa3.jpg', class: 'img-responsive' %></div></li>
        </ul>
        <div class="slide-controller">
          <a href="#" class="btn-prev"><%= image_tag 'btn_prev.png' %></a>
          <a href="#" class="btn-prev"><%= image_tag 'btn_play.png' %></a>
          <a href="#" class="btn-prev"><%= image_tag 'btn_pause.png' %></a>
          <a href="#" class="btn-prev"><%= image_tag 'btn_next.png' %></a>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
  </div>
  <script type="text/javascript">
    $(document).on('turbolinks:load', function() {
        $('#visual').pignoseLayerSlider({
            play    : '.btn-play',
            pause   : '.btn-pause',
            next    : '.btn-next',
            prev    : '.btn-prev'
        });
    });
  </script>
</div>